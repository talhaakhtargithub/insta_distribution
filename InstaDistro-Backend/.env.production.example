# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_USER=swarm_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=insta_swarm

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# JWT Configuration
JWT_SECRET=CHANGE_ME_LONG_RANDOM_STRING_HERE
JWT_EXPIRY=24h

# Encryption Key (32 bytes hex - 64 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=CHANGE_ME_64_HEX_CHARACTERS_HERE

# Instagram API (Optional - for business accounts)
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# API Key (Optional - for extra security)
API_KEY=

# Monitoring (Optional)
SENTRY_DSN=
